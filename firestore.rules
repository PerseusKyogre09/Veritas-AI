rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to communityFeed for authenticated users
    match /communityFeed/{document} {
      allow read, write: if request.auth != null;
    }

    // Allow read/write access to all documents for authenticated users (more permissive)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}