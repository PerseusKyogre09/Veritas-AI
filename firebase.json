{
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "apphosting": {
    "runConfig": {
      "cpu": "1",
      "memory": "512Mi",
      "maxInstances": 100,
      "minInstances": 0,
      "concurrency": 80
    }
  }
}